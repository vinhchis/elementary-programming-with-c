{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C File",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "Clean Build .out of C Files"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Mặc định cho task build
            },
            "detail": "compiler: /usr/bin/gcc"
        },
        {
            "label": "Compile C File with -lm",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "compiler: /usr/bin/gcc with -lm"
        },
        {
            "label": "Clean Build .out of C Files",
            "type": "shell",
            "command": "rm",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "none"
            }
        }
    ]
}
/*
* Group: build, test, none
* DependOn
    - Cacs Task có thể phụ thuộc vào các task khác
    - "dependsOrder": "sequence"  // hoặc "parallel"
*/